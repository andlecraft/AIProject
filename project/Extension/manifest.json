{
  "manifest_version": 3,
  "name": "What is your credibility?",
  "version": "1.0",
  "description": "당신의 신뢰도를 분석합니다.",
  "icons": {
      "16": "Sample.png",
      "48": "Sample.png",
      "128": "Sample.png"
  },
  "background": {
      "service_worker": "background.js"
  },
  "action": { 
      "default_popup": "popup.html",
      "default_icon": "Sample.png"
  },
  "permissions": [ //수정필요시 @pepsi 에게 말좀 해줄것 
      "tabs",
      "activeTab",
      "storage"
  ],
  "content_scripts": [ //수정필요시 @pepsi 에게 말좀 해줄것 
      { 
          "matches": [
              "http://*/*",
              "https://*/*"
          ],
          "js": ["content.js"],
          "run_at": "document_end"
      }
  ],
  "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'" 
  }
}
